<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Segway">

    <ImageView
        android:id="@+id/imgSegway"
        android:layout_width="319dp"
        android:layout_height="153dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/txtImgDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/segwaytour" />

    <TextView
        android:id="@+id/txtTourOverview"
        android:layout_width="311dp"
        android:layout_height="198dp"
        android:layout_marginTop="52dp"
        android:text="@string/txtTourOverview"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSegway" />
</androidx.constraintlayout.widget.ConstraintLayout>